@model IEnumerable<Data.Models.ViewModels.ImagenProductoViewModel>

@{
    ViewBag.Title = "VerGaleriaDeProducto";
}

    <div class="jumbotron" id="jumbotronTitulo">
        <h2>Ver galeria de producto</h2>
    </div>
<hr size="10"/>

<div class="row">
    @foreach (var modelItem in Model)
    {
        <div class="col-sm-6 col-md-3">
            <a href="/Imagen/VisualizarImagenOriginal/@modelItem.CodigoImagenProducto" class="thumbnail" id="thumbnailImagenesProductos">
                @{ 
                    var base64 = Convert.ToBase64String(modelItem.Imagen);
                    var imageSource = String.Format("data:image/gif;base64,{0}", base64);
                }
                <img class="img-thumbnail" id="productoListImage" src="@imageSource" alt="Generic placeholder thumbnail">
            </a>
        </div>
    }
</div>