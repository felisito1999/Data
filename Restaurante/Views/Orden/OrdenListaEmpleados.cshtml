@model IEnumerable<Data.Models.ViewModels.OrdenEmpleadoViewModel>

@{
    ViewBag.Title = "OrdenListaEmpleados";
}

    <div class="jumbotron" id="jumbotronTitulo">
        <img class="img-title-center" src="~/Content/Images/kisspng-invoice-payment-bookkeeping-accounting-computer-ic-save-png-invoices-5ab1109e4137b1.6855386115215535662671.png" />
        <h2>Lista de ordenes asignadas</h2>
    </div>

<table class="table">
    <tr>
        <th>
           Nombre de cliente:
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sucursal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto)
        </th>
        <th>
            Precio:
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Cliente.NombreCliente) @Html.DisplayFor(modelItem => item.Cliente.ApellidoCliente)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sucursal.NombreSucursal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Producto.NombreProducto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrdenDetalle.PrecioVenta)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Estado.NombreEstado)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Fecha)
    </td>
    @if (item.Estado.CodigoEstado == 1024)
    {
        <td>
            @Html.ActionLink("Completar orden", "ActualizarEstadoOrden", new { id = item.CodigoOrden }, new { @class = "btn btn-block", id = "botonFuncional" })
        </td>
    }
    else
    {
        <td>
            @Html.ActionLink("Completar orden", "ActualizarEstadoOrden", new { id = item.CodigoOrden }, new { @class = "btn disabled btn-block", id = "botonFuncional" })
        </td>
    }
    @if (item.Estado.CodigoEstado == 1024)
    {
        <td>
            <input class="checkbox" type="checkbox" disabled="" />
        </td>
    }
    else
    {
        <td>
            <input class="checkbox" type="checkbox" disabled="" checked=""/>
        </td>
    }
    <td>
        @Html.ActionLink("Ver detalle de orden", "DetallarOrden", "Orden", new { idOrden = item.CodigoOrden}, new { @class = "btn btn-block btn-responsive", id = "botonFuncional" })
    </td>
</tr>
}
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
            Total:
        </td>
        <td>

        </td>
    </tr>

</table>
